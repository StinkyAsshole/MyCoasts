<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_height"
    android:layout_marginLeft="@dimen/dialog_button_margin"
    android:layout_marginRight="@dimen/dialog_button_margin"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_list_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="какая то шняга"/>


        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_big"
            android:gravity="center"
            android:text="1000 р"/>

    </LinearLayout>
    <include layout="@layout/date_rounded_text_view"/>

</FrameLayout>